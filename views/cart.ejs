<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Golden Drip Cafe</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }
        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 1.5rem;
        }
        .card-title {
            color: #343a40;
            font-weight: bold;
        }
        .card-text {
            color: #6c757d;
        }
        .btn {
            border-radius: 20px;
        }
        .menu-section {
            margin: 2rem auto;
            max-width: 800px;
        }
        .menu-header {
            text-align: center;
            margin-bottom: 2rem;
            font-size: 2rem;
            color: #212529;
        }
    </style>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container menu-section">
        <h1 class="menu-header">Welcome to Golden Drip Cafe</h1>

        <!-- Chicken Dum Biryani Card -->
        <div class="card">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="https://www.thespruceeats.com/thmb/SalyKjzBU-K1Bv-FTFWnbd6ckjY=/2121x1414/filters:fill(auto,1)/GettyImages-639704020-5c4a63ecc9e77c00017bfebf.jpg" 
                         class="img-fluid" alt="Biryani">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">Chicken Dum Biryani</h5>
                        <p class="card-text">1 kg chicken dum biryani + 1 cup raita + 1 cup aachar + salad + Coca-Cola</p>
                        <div>
                          <button class="btn btn-danger btn-sm" onclick="updateCount('biryani', -1)">-</button>
                          <span id="biryani" class="px-3">0</span>
                          <button class="btn btn-primary btn-sm" onclick="updateCount('biryani', 1)">+</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Chicken Chap Card -->
        <div class="card">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="https://atanurrannagharrecipe.com/wp-content/uploads/2022/12/Chicken-Chap-photo-01.jpg" 
                         class="img-fluid" alt="Chicken Chap">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">Chicken Chap</h5>
                        <p class="card-text">2 pcs chicken chap</p>
                        <div>
                          <button class="btn btn-danger btn-sm" onclick="updateCount('chap', -1)">-</button>
                          <span id="chap" class="px-3">0</span>
                          <button class="btn btn-primary btn-sm" onclick="updateCount('chap', 1)">+</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('./partials/scripts') %>

    <script>
         function updateCount(productId, increment) {
            const countElement = document.getElementById(productId);
            let count = parseInt(countElement.innerText);
            count += increment;
            if (count < 0) count = 0;
            if(count >20) count = 20 ; 
             
            countElement.innerText = count;
        }
    </script>
</body>
</html>
